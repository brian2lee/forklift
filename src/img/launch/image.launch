<launch>
  <!-- Node for visualizing the color image -->
  <node name="image_view_color" pkg="image_view" type="image_view" output="screen">
    <param name="image" value="/camera/color/image_raw" />
  </node>

  <!-- Node for visualizing the depth image -->
  <node name="image_view_depth" pkg="image_view" type="image_view" output="screen">
    <param name="image" value="/camera/depth/image_raw" />
  </node>
</launch>

